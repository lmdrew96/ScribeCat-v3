{
  "name": "scribecat-v3",
  "version": "3.3.0",
  "description": "ADHD-friendly lecture companion - Record, transcribe, and study smarter",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"pnpm dev:vite\" \"pnpm dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && electron .",
    "build": "pnpm build:vite && pnpm build:main && pnpm build:preload",
    "build:vite": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "package": "pnpm build && electron-builder",
    "compile": "tsc --noEmit",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "clean": "rm -rf dist release",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --apply",
      "biome format --write"
    ]
  },
